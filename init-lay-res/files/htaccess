# Disable directory browsing
Options -Indexes

<IfModule mod_deflate.c>
  # compress text, html, javascript, css, xml:
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

# Font Packages CORS Issues resolution
<IfModule mod_headers.c>
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|font.css|css)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>
</IfModule>

Options +FollowSymLinks -MultiViews
RewriteEngine On

# Deny access to htaccess
<Files .htaccess>
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</Files>

# Deny access to filenames starting with dot(.)
<FilesMatch "^\.">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

# Deny access to files with outlined extensions
<FilesMatch "\.(ini|psd|log|sh|sql|view|inc|lock)$">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

# Deny access to specified files
<FilesMatch "(composer|package)\.json">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

# Redirect traffic to www when not on port 80
# RewriteCond %{SERVER_PORT} !80
# RewriteCond %{HTTP_HOST} !^www\.
# RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

# Allow any files or directories that exist to be displayed directly
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d [OR]
RewriteCond %{REQUEST_FILENAME} -l
RewriteRule ^ - [L]

# [HIDE_.PHP_EXTENSION]
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [L]

RewriteCond %{REQUEST_URI} !^index.php
RewriteRule ^(.*)$ index.php?brick=%{REQUEST_URI} [L,QSA]
