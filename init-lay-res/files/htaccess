# hide apache info from the server response
ServerSignature Off

# Disable directory browsing
Options -Indexes

<IfModule mod_deflate.c>
  # compress text, html, javascript, css, xml:
  AddOutputFilterByType DEFLATE text/plain
  AddOutputFilterByType DEFLATE text/html
  AddOutputFilterByType DEFLATE text/xml
  AddOutputFilterByType DEFLATE text/css
  AddOutputFilterByType DEFLATE application/xml
  AddOutputFilterByType DEFLATE application/xhtml+xml
  AddOutputFilterByType DEFLATE application/rss+xml
  AddOutputFilterByType DEFLATE application/javascript
  AddOutputFilterByType DEFLATE application/x-javascript
</IfModule>

<IfModule mod_headers.c>
  # Font Packages CORS Issues resolution
  <FilesMatch "\.(ttf|ttc|otf|eot|woff|font.css|css)$">
    Header set Access-Control-Allow-Origin "*"
  </FilesMatch>

  # Hide PHP X-powered header
  Header unset X-Powered-By
  Header always unset X-Powered-By
</IfModule>

Options +FollowSymLinks -MultiViews
RewriteEngine On

# Deny access to htaccess
<Files .htaccess>
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</Files>

# Deny access to filenames starting with dot(.)
<FilesMatch "^\.">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

# Deny access to files with outlined extensions
<FilesMatch "\.(ini|psd|log|sh|sql|view|inc|lock)$">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

# Deny access to specified files
<FilesMatch "(composer|package)\.json">
RewriteRule '' / [R=301,L]
Order allow,deny
Deny from all
</FilesMatch>

## Force website to redirect to www.domain.tld
# Make condition active on production server
RewriteCond %{REMOTE_HOST} !127.0.0.1
RewriteCond %{REMOTE_HOST} !^192.168
RewriteCond %{REMOTE_HOST} !::1
# Make condition active if not a subdomain already
RewriteCond %{HTTP_HOST} !^([^.]+)\.([^.]+)\.([^.]+)
RewriteRule ^(.*)$ https://www.%{HTTP_HOST}/$1 [R=301,L]

# Force open with HTTPS on production server
RewriteCond %{REMOTE_HOST} !127.0.0.1
RewriteCond %{REMOTE_HOST} !^192.168
RewriteCond %{REMOTE_HOST} !::1
RewriteCond %{SERVER_PORT} 80
RewriteRule ^(.*)$ https://%{HTTP_HOST}/$1 [R=301,L]

# Allow any files or directories that exist to be displayed directly
RewriteCond %{REQUEST_FILENAME} !index.php
RewriteCond %{REQUEST_FILENAME} -f [OR]
RewriteCond %{REQUEST_FILENAME} -d [OR]
RewriteCond %{REQUEST_FILENAME} -l
RewriteRule ^ - [L]

# [HIDE_.PHP_EXTENSION]
RewriteCond %{REQUEST_FILENAME}.php -f
RewriteRule ^ %{REQUEST_URI}.php [L]

RewriteRule ^(.*)$ index.php?brick=%{REQUEST_URI}&referer_host=%{HTTP_REFERER} [L,QSA]
